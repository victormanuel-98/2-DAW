<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:models="clr-namespace:MauiAppDAW.Models"
            x:Class="MauiAppDAW.Views.HistoryPage"
            Title="Historial">

    <ContentPage Title="Personajes">
        <CollectionView x:Name="cvCharacters">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Character">
                    <Border Style="{StaticResource SW-Card}">
                        <Grid ColumnDefinitions="80, *">
                            <Image WidthRequest="70" HeightRequest="70" Aspect="AspectFill" Source="{Binding DisplayImageUrl}" />
                            <StackLayout Grid.Column="1" Padding="10,0,0,0">
                                <Label Text="{Binding Name}" FontSize="16" TextColor="{StaticResource SW-Accent}" />
                                <Label Text="{Binding SavedAt}" FontSize="12" TextColor="{StaticResource SW-TextMuted}" />
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage>

    <ContentPage Title="Naves">
        <CollectionView x:Name="cvStarships">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Starship">
                    <Border Style="{StaticResource SW-Card}">
                        <Grid ColumnDefinitions="80, *">
                            <Image WidthRequest="70" HeightRequest="70" Aspect="AspectFill" Source="{Binding DisplayImageUrl}" />
                            <StackLayout Grid.Column="1" Padding="10,0,0,0">
                                <Label Text="{Binding Name}" FontSize="16" TextColor="{StaticResource SW-Accent}" />
                                <Label Text="{Binding SavedAt}" FontSize="12" TextColor="{StaticResource SW-TextMuted}" />
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage>

    <ContentPage Title="Planetas">
        <CollectionView x:Name="cvPlanets">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Planet">
                    <Border Style="{StaticResource SW-Card}">
                        <Grid ColumnDefinitions="80, *">
                            <Image WidthRequest="70" HeightRequest="70" Aspect="AspectFill" Source="{Binding DisplayImageUrl}" />
                            <StackLayout Grid.Column="1" Padding="10,0,0,0">
                                <Label Text="{Binding Name}" FontSize="16" TextColor="{StaticResource SW-Accent}" />
                                <Label Text="{Binding SavedAt}" FontSize="12" TextColor="{StaticResource SW-TextMuted}" />
                            </StackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage>

</TabbedPage>